@model IEnumerable<AlisverisProje.Entities.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Kategoriler</h1>

<p>
    <a asp-action="Create">Yeni Kategori Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
             <a href="/Manuel/Index?CategoryId=@item.Id" ><img src="~/img/product.png" style="width:40px;" title="Ürünler" /></a>
                 <!-- <a asp-controller="Product" asp-action="Index" asp-route-id="@item.Id"><img src="~/img/product.png" style="width:40px;" title="Ürünler" /></a> |-->
                <a asp-action="Edit" asp-route-id="@item.Id"><img src="~/img/Update.svg" style="width:40px;" title="Güncelle" /></a> |
                <a asp-action="Details" asp-route-id="@item.Id"><img src="~/img/Detail.svg" style="width:40px;"  title="Detay" /></a> |
                <a asp-action="Delete" asp-route-id="@item.Id"><img src="~/img/Remove.svg" style="width:40px;"  title="Sil" /></a>
            </td>
        </tr>
}
    </tbody>
</table>
